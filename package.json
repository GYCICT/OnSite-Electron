{
  "name": "onsite-client",
  "version": "1.2.5",
  "description": "Onsite Electron App",
  "main": "index.js",
  "author": "George Dellas <gorgdel18@gmail.com>",
  "license": "GPL3",
  "repo": "https://github.com/gorgdel/onsite-electron",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder --win --linux -p always"
  },
  "devDependencies": {
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "gorgdel",
        "repo": "onsite-electron",
        "private": true
      }
    ],
    "appId": "onsite.client",
    "icon": "img/gyc.ico",
    "productName": "Onsite Client",
    "directories": {
      "output": "build"
    },
    "win": {
      "target": "nsis"
    },
    "linux":{
      "appId": "onsite.client",
      "category": "Utility",
      "icon": "img/gyc.png",
      "publish": [
        {
          "provider": "github"
        }
      ],
      "desktop": {
        "Name": "Onsite Client",
        "Comment": "Onsite Client",
        "GenericName": "Onsite Client",
        "Categories": "Utility;"
      },
      "target": [{
        "target": "AppImage"
      }]
    },
    "nsis": {
      "oneClick": false,
      "installerIcon": "img/gyc.ico",
      "uninstallerIcon": "img/gyc.ico",
      "uninstallDisplayName": "Onsite Client",
      "license": "license.md",
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "electron-packager": "^17.1.1",
    "electron-updater": "^5.3.0"
  }
}
